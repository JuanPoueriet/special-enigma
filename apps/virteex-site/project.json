{
  "name": "virteex-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "virteex",
  "sourceRoot": "apps/virteex-site/src",
  "tags": [
    "platform:web"
  ],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/virteex-site",
        "browser": "apps/virteex-site/src/main.ts",
        "tsConfig": "apps/virteex-site/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/virteex-site/public"
          }
        ],
        "styles": [
          "apps/virteex-site/src/styles.scss"
        ],
        "server": "apps/virteex-site/src/main.server.ts",
        "ssr": {
          "entry": "apps/virteex-site/src/server.ts"
        },
        "outputMode": "server"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "virteex-site:build:production"
        },
        "development": {
          "buildTarget": "virteex-site:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/virteex-site/jest.config.cts",
        "tsConfig": "apps/virteex-site/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "virteex-site:build",
        "port": 4200,
        "staticFilePath": "dist/apps/virteex-site/browser",
        "spa": true
      }
    }
  }
}