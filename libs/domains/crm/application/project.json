{
  "name": "crm-application",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/domains/crm/application/src",
  "projectType": "library",
  "tags": [
    "type:application",
    "scope:crm"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/domains/crm/application",
        "main": "libs/domains/crm/application/src/index.ts",
        "tsConfig": "libs/domains/crm/application/tsconfig.lib.json",
        "assets": [
          "libs/domains/crm/application/*.md"
        ],
        "rootDir": "."
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/domains/crm/application/jest.config.cts",
        "passWithNoTests": true
      }
    }
  }
}